<% layout("/layouts/boilerplate") %>

    <body>


        <h3>All Listings</h3>

        <!--Button to Creaete a new Lsit-->

        <!-- <form action="/listings/new" method="get">
    <button>Create New</button>
  </form> -->

        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xs-1">
            <% for(list of listings){ %>

                <!-- Creating cards for each list -->

                <a href="/listings/<%= list.id %>/show">

                    <div class="card col listing-card ">
                        <img src="<%= list.image.url %>" class="card-img-top" alt="Listing Image" style="height: 20rem" />
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b> <%= list.title %></b>
                                <br /> &#8377
                                <%= list.price.toLocaleString("en-IN")%> / night
                            </p>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>
    </body>