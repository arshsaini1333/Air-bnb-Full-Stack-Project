<% layout("/layouts/boilerplate") %>

    <div class="row">
        <div class="col-md-8 offset-md-3  mt-3">
            <h3>
                <%= listing.title %>
            </h3>
        </div>
        <div class="card col-md-6 offset-md-3 show-card">
            <img src="<%= listing.image %>" class="card-img-top show-img" alt="Listing Image" />

            <div class="card-body">
                <p class="card-text">


                    <%= listing.description %>
                        <br /> &#8377
                        <%= listing.price.toLocaleString("en-IN") %>
                            <br />
                            <%= listing.location %>
                                <br />
                                <%= listing.country %>
                </p>
            </div>
        </div>
    </div>
    <div class="row mb-2 ">
        <div class="col-md-1 offset-md-3 mb-2">
            <button class="btn btn-danger edit-btn edit-btn-show">
          <a href="/listings/<%= listing._id %>/edit">Edit</a>
        </button>


        </div>
        <div class="col-md-1">
            <form action="/listings/<%= listing._id %>?_method=DELETE" method="post">
                <button class="btn btn-dark">Delete</button>
            </form>
        </div>
    </div>